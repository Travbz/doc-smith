{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "file": {
            "type": "string",
            "description": "Path to the original file"
        }
    },
    "required": ["file"],
    "responses": {
        "type": "object",
        "properties": {
            "documentation": {
                "type": "string",
                "description": "Generated markdown documentation"
            },
            "metadata": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Documentation title"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["default", "component", "library"],
                        "description": "Type of documentation"
                    },
                    "language": {
                        "type": "string",
                        "description": "Programming language"
                    },
                    "generated": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Generation timestamp"
                    },
                    "version": {
                        "type": "string",
                        "description": "Documentation version"
                    }
                },
                "required": ["title", "type", "language", "generated"]
            },
            "sections": {
                "type": "array",
                "description": "Documentation sections",
                "items": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Section title"
                        },
                        "content": {
                            "type": "string",
                            "description": "Section content in markdown"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["overview", "installation", "usage", "api", "examples", "errors"],
                            "description": "Section type"
                        }
                    },
                    "required": ["title", "content", "type"]
                }
            }
        },
        "required": ["documentation", "metadata"]
    }
}